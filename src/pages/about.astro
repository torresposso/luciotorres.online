---
import Layout from "../layouts/Layout.astro";
import FallbackImage from "../assets/blog-placeholder-about.jpg";
import { SITE_TITLE } from "../consts";

const schema = {
	"@context": "https://schema.org",
	"@type": "Person",
	name: "Edison Lucio Torres",
	url: "https://luciotorres.online/about",
	sameAs: [
		"https://www.facebook.com/edisonluciotorres/",
		"https://www.instagram.com/edisonluciotorres/",
		"https://x.com/luciotorres",
		"https://es.wikipedia.org/wiki/Edison_Lucio_Torres",
	],
	image: "https://luciotorres.com.co/wp-content/uploads/2025/10/lucio-torres.png",
	jobTitle: "Comunicador Social - Periodista - Escritor",
	description:
		"Edison Lucio Torres es un comunicador social, periodista y escritor colombiano, defensor y docente universitario de Derechos Humanos.",
};
---

<Layout
	title="¿Quién es Lucio Torres?"
	description="Edison Lucio Torres - Comunicador Social, Periodista y Escritor. Defensor y docente universitario de Derechos Humanos."
	image={{ src: "https://luciotorres.com.co/wp-content/uploads/2025/10/lucio-torres.png" } as any}
>
	<!-- HERO SECTION -->
	<section
		class="py-32 bg-white relative overflow-hidden px-6 lg:px-12 border-b border-base-300"
	>
		<div
			class="max-w-screen-2xl mx-auto flex flex-col lg:flex-row gap-24 items-center"
		>
			<div class="lg:w-7/12 order-2 lg:order-1">
				<div class="flex items-center gap-4 mb-12">
					<div
						class="flag-separator w-16 h-2 rounded-full overflow-hidden"
					>
						<div class="y"></div>
						<div class="b"></div>
						<div class="r"></div>
					</div>
					<span
						class="text-xs font-black uppercase tracking-[0.5em] text-neutral"
						>BIOGRAFÍA</span
					>
				</div>

				<h1
					class="text-7xl md:text-[10rem] font-editorial font-black leading-[0.8] text-neutral uppercase tracking-tighter mb-12"
				>
					EDISON <br />
					<span class="text-secondary">LUCIO TORRES.</span>
				</h1>

				<p
					class="text-3xl font-editorial font-bold text-neutral leading-tight mb-12 italic border-l-8 border-primary pl-8"
				>
					"Periodista por vocación, defensor por deber, candidato por
					amor a Colombia."
				</p>

				<div
					class="prose-journal text-neutral/70 text-xl leading-relaxed max-w-2xl"
				>
					<p>
						Comunicador social, periodista y escritor colombiano,
						defensor y docente universitario de Derechos Humanos.
						Luchador incansable contra la corrupción y uno de los
						precandidatos presidenciales más coherentes de la
						nación.
					</p>
				</div>

				<div class="flex flex-wrap gap-6 mt-16">
					<a
						href="https://es.wikipedia.org/wiki/Edison_Lucio_Torres"
						target="_blank"
						class="btn-hero-primary"
					>
						WIKIPEDIA
					</a>
					<a href="/gran-colombia" class="btn-hero-secondary">
						MI PROYECTO
					</a>
				</div>
			</div>

			<div class="lg:w-5/12 order-1 lg:order-2">
				<img
					src="https://luciotorres.com.co/wp-content/uploads/2025/10/lucio-torres.png"
					alt="Edison Lucio Torres"
					class="w-full grayscale hover:grayscale-0 transition-all duration-1000 shadow-2xl border border-base-300"
				/>
			</div>
		</div>
	</section>

	<!-- TRAYECTORIA SECTION -->
	<section class="py-32 bg-base-200/30 px-6 lg:px-12">
		<div class="max-w-7xl mx-auto">
			<div class="mb-24">
				<h2
					class="text-6xl md:text-8xl font-editorial font-black text-neutral uppercase tracking-tighter leading-none mb-8"
				>
					HISTORIA <br />
					<span class="text-accent">& LUCHA.</span>
				</h2>
				<div
					class="flag-separator w-24 h-2 rounded-full overflow-hidden"
				>
					<div class="y"></div>
					<div class="b"></div>
					<div class="r"></div>
				</div>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-2 gap-12">
				{
					[
						{
							year: "1945",
							title: "Nacimiento",
							desc: "Nace en Magangué, Bolívar. Cuna de su vocación por la comunicación y la justicia.",
						},
						{
							year: "1970s",
							title: "Liderazgo Estudiantil",
							desc: "Dirigió las jornadas estudiantiles de Magangué y Barranquilla. Expulsado por luchar por la calidad educativa.",
						},
						{
							year: "1979",
							title: "Periodismo Puro",
							desc: "Inicia su carrera profesional. Trabajó en Caracol, RCN y El Heraldo, denunciando la corrupción.",
						},
						{
							year: "2010",
							title: "Visión Nacional",
							desc: "Precandidato presidencial junto a Carlos Gaviria y Gustavo Petro por el Polo Democrático.",
						},
					].map((item) => (
						<div class="bg-white p-12 border border-base-300 transition-all duration-500 hover:shadow-2xl">
							<div class="text-4xl font-editorial font-black text-primary mb-4 italic tracking-tighter">
								{item.year}
							</div>
							<h3 class="text-2xl font-editorial font-black text-neutral uppercase tracking-tight mb-4">
								{item.title}
							</h3>
							<p class="text-neutral/60 font-medium leading-relaxed">
								{item.desc}
							</p>
						</div>
					))
				}
			</div>
		</div>
	</section>

	<!-- ESPECIALIDADES -->
	<section class="py-32 bg-white px-6 lg:px-12 border-t border-base-300">
		<div class="max-w-screen-2xl mx-auto">
			<div
				class="grid grid-cols-1 md:grid-cols-4 gap-px bg-base-300 border border-base-300"
			>
				{
					[
						{
							icon: "M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z",
							title: "Comunicador",
							desc: "Experiencia nata en la construcción de opinión pública.",
						},
						{
							icon: "M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z",
							title: "Periodista",
							desc: "Ejerciendo la verdad desde 1979 con rigor y valor.",
						},
						{
							icon: "M12 14l9-5-9-5-9 5 9 5z",
							title: "Docente",
							desc: "Educando a las nuevas generaciones de pensadores colombianos.",
						},
						{
							icon: "M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7",
							title: "Escritor",
							desc: "Autor de obras que analizan la realidad social nacional.",
						},
					].map((item) => (
						<div class="bg-white p-12 transition-all duration-500 hover:bg-base-200/50">
							<div class="w-12 h-12 text-secondary mb-8">
								<svg
									xmlns="http://www.w3.org/2000/svg"
									fill="none"
									viewBox="0 0 24 24"
									stroke="currentColor"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="1.5"
										d={item.icon}
									/>
								</svg>
							</div>
							<h3 class="text-xl font-editorial font-black text-neutral uppercase tracking-widest mb-4">
								{item.title}
							</h3>
							<p class="text-neutral/60 text-sm font-medium leading-relaxed">
								{item.desc}
							</p>
						</div>
					))
				}
			</div>
		</div>
	</section>

	<!-- CTA FINAL -->
	<section class="py-40 bg-secondary text-white text-center px-6">
		<div class="max-w-4xl mx-auto">
			<h2
				class="text-6xl md:text-8xl font-editorial font-black mb-12 uppercase tracking-tighter leading-tight"
			>
				LA PATRIA SE FORJA <br />
				<span class="text-primary italic">DESDE EL CORAZÓN.</span>
			</h2>
			<div class="flex flex-wrap gap-8 justify-center">
				<a
					href="/gran-colombia"
					class="btn-hero-primary bg-primary! text-neutral! border-white!"
				>
					EL MANIFIESTO
				</a>
				<a
					href="/poder-del-ser"
					class="btn-hero-secondary text-white! border-white! hover:bg-white! hover:text-secondary!"
				>
					EL PODER DEL SER
				</a>
			</div>
		</div>
	</section>
</Layout>
