---
import { getCollection } from "astro:content";

import Layout from "../../layouts/Layout.astro";
import FormattedDate from "../../components/FormattedDate.astro";
import LazyImage from "../../components/LazyImage.astro";
import Pagination from "../../components/Pagination.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../../consts";
import FallbackImage from "../../assets/blog-placeholder-1.jpg";

export async function getStaticPaths({ paginate }: any) {
    const posts = (await getCollection("articulos")).sort(
        (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
    );
    return paginate(posts, { pageSize: 12 });
}

function extractSlugFromPath(id: string): string {
    const parts = id.split("/");
    return parts[parts.length - 1];
}

const { page } = Astro.props as { page: any };
const posts = page.data;
---

<Layout
    title={`${SITE_TITLE} – Artículos – Página ${page.currentPage}`}
    description={`${SITE_DESCRIPTION} – Explorando la verdad en cada página.`}
    ogImage={FallbackImage.src}
>
    <!-- HERO SECTION -->
    <section class="py-24 bg-white border-b border-base-300 px-6">
        <div class="max-w-7xl mx-auto text-center">
            <div class="flex items-center justify-center gap-4 mb-8">
                <div class="flag-separator w-12 h-1.5 rounded-full overflow-hidden">
                    <div class="y"></div>
                    <div class="b"></div>
                    <div class="r"></div>
                </div>
                <span class="text-xs font-black uppercase tracking-[0.3em] text-neutral">ARCHIVO</span>
                <div class="flag-separator w-12 h-1.5 rounded-full overflow-hidden">
                    <div class="y"></div>
                    <div class="b"></div>
                    <div class="r"></div>
                </div>
            </div>
            
            <h1 class="text-4xl sm:text-5xl md:text-7xl font-editorial font-black text-neutral uppercase tracking-tighter mb-6 leading-none">
                ARCHIVO <span class="text-primary italic">PERIODÍSTICO.</span>
            </h1>
            <p class="text-xl text-neutral/60 max-w-2xl mx-auto">
                Investigaciones, análisis y opinión independiente para una Colombia más justa.
            </p>
        </div>
    </section>

    <!-- ARTICLES GRID -->
    <section class="py-20 bg-base-100 px-6">
        <div class="max-w-7xl mx-auto">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
                {posts.map((post: any) => (
                    <a href={`/articulos/${extractSlugFromPath(post.id)}/`} class="group flex flex-col h-full bg-white rounded-2xl overflow-hidden border border-base-200 hover:shadow-2xl hover:border-primary/20 transition-all duration-500 hover:-translate-y-2">
                        <!-- Image Container -->
                        <div class="relative overflow-hidden aspect-16/10">
                            <span class="absolute top-4 left-4 bg-neutral/80 backdrop-blur-md text-white text-[10px] font-black uppercase tracking-wider px-3 py-1 rounded-full z-10 border border-white/10">
                                {post.data.categories?.[0] || "ACTUALIDAD"}
                            </span>
                            
                            <div class="w-full h-full grayscale group-hover:grayscale-0 transition-all duration-700 group-hover:scale-105">
                                {post.data.heroImage ? (
                                    <LazyImage
                                        src={post.data.heroImage}
                                        alt={post.data.heroImageAlt || post.data.title}
                                        width={600}
                                        height={375}
                                        aspectRatio="16/10"
                                    />
                                ) : (
                                    <div class="w-full h-full bg-base-200 flex items-center justify-center text-neutral/20">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="w-12 h-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                        </svg>
                                    </div>
                                )}
                            </div>
                        </div>

                        <!-- Content -->
                        <div class="p-8 flex flex-col flex-1">
                            <h2 class="text-xl sm:text-2xl font-editorial font-bold leading-tight mb-4 group-hover:text-primary transition-colors">
                                {post.data.title}
                            </h2>
                            <p class="text-neutral/60 text-sm leading-relaxed mb-6 line-clamp-3">
                                {post.data.description}
                            </p>
                            
                            <div class="mt-auto pt-6 border-t border-base-200 flex items-center justify-between">
                                <span class="flex items-center gap-2 text-xs font-bold text-neutral/40 uppercase tracking-wider">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
                                    <FormattedDate date={post.data.pubDate} />
                                </span>
                                <span class="text-primary font-black text-xs uppercase tracking-widest group-hover:underline decoration-2 underline-offset-4">
                                    LEER ARTÍCULO
                                </span>
                            </div>
                        </div>
                    </a>
                ))}
            </div>

            <Pagination page={page} urlPattern={"/articulos/{}"} />
        </div>
    </section>
</Layout>
