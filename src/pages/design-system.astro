---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Sistema de Diseño - Lucio Torres">
    <div class="min-h-screen bg-base-200 py-20 px-6">
        <div class="max-w-4xl mx-auto space-y-16">
            <!-- Header -->
            <div class="text-center space-y-4">
                <h1 class="text-6xl font-editorial font-black text-primary">
                    Sistema de Diseño
                </h1>
                <p class="text-2xl text-neutral/60 font-editorial italic">
                    "La Estética de la Verdad"
                </p>
                <div
                    class="flag-separator max-w-xs mx-auto rounded-full overflow-hidden"
                >
                    <div class="y"></div>
                    <div class="b"></div>
                    <div class="r"></div>
                </div>
            </div>

            <!-- Colors -->
            <section class="space-y-6">
                <h2
                    class="text-3xl font-black uppercase text-neutral tracking-widest border-b pb-4"
                >
                    Paleta Oficial
                </h2>
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                    <div class="space-y-2">
                        <div
                            class="h-32 rounded-box bg-primary flex items-center justify-center shadow-lg"
                        >
                            <span class="font-black text-primary-content"
                                >PRIMARIO</span
                            >
                        </div>
                        <p class="text-xs font-mono text-center">#FCD116</p>
                    </div>
                    <div class="space-y-2">
                        <div
                            class="h-32 rounded-box bg-secondary flex items-center justify-center shadow-lg"
                        >
                            <span class="font-black text-secondary-content"
                                >SECUNDARIO</span
                            >
                        </div>
                        <p class="text-xs font-mono text-center">#003893</p>
                    </div>
                    <div class="space-y-2">
                        <div
                            class="h-32 rounded-box bg-accent flex items-center justify-center shadow-lg"
                        >
                            <span class="font-black text-accent-content"
                                >ACENTO</span
                            >
                        </div>
                        <p class="text-xs font-mono text-center">#CE1126</p>
                    </div>
                    <div class="space-y-2">
                        <div
                            class="h-32 rounded-box bg-neutral flex items-center justify-center shadow-lg"
                        >
                            <span class="font-black text-neutral-content"
                                >NEUTRAL</span
                            >
                        </div>
                        <p class="text-xs font-mono text-center">#1E293B</p>
                    </div>
                </div>
            </section>

            <!-- Typography -->
            <section class="space-y-6">
                <h2
                    class="text-3xl font-black uppercase text-neutral tracking-widest border-b pb-4"
                >
                    Tipografía
                </h2>
                <div class="bg-base-100 p-8 rounded-box shadow-sm space-y-8">
                    <div>
                        <p
                            class="text-sm uppercase text-neutral/40 font-bold mb-2"
                        >
                            Editorial Headers (Newsreader)
                        </p>
                        <h1 class="text-5xl font-editorial font-black mb-2">
                            Justicia Social
                        </h1>
                        <h2 class="text-4xl font-editorial font-bold mb-2">
                            Pan con Paz
                        </h2>
                        <h3 class="text-3xl font-editorial font-medium">
                            Colombia Soberana
                        </h3>
                    </div>
                    <div>
                        <p
                            class="text-sm uppercase text-neutral/40 font-bold mb-2"
                        >
                            Body Text (Roboto)
                        </p>
                        <p class="text-lg leading-relaxed text-neutral/80">
                            El periodista independiente no busca complacer a las
                            maquinarias, busca la verdad. En nuestra propuesta
                            de gobierno, la <span class="text-highlight"
                                >transparencia</span
                            > es el eje fundamental.
                        </p>
                    </div>
                </div>
            </section>

            <!-- Components -->
            <section class="space-y-6">
                <h2
                    class="text-3xl font-black uppercase text-neutral tracking-widest border-b pb-4"
                >
                    Componentes UI
                </h2>

                <div class="grid md:grid-cols-2 gap-8">
                    <!-- Buttons -->
                    <div
                        class="bg-base-100 p-8 rounded-box shadow-sm space-y-6"
                    >
                        <h3 class="font-bold text-neutral">Botones</h3>
                        <div class="flex flex-col gap-4">
                            <button class="btn-hero-primary w-full"
                                >Comenzar Ruta</button
                            >
                            <button class="btn-hero-secondary w-full"
                                >Leer Manifiesto</button
                            >
                            <button class="btn btn-primary rounded-full w-full"
                                >Botón Estándar</button
                            >
                        </div>
                    </div>

                    <!-- Cards -->
                    <div
                        class="bg-base-100 p-8 rounded-box shadow-sm space-y-6"
                    >
                        <h3 class="font-bold text-neutral">Tarjetas</h3>
                        <div
                            class="card bg-base-100 shadow-xl border border-base-300"
                        >
                            <div class="card-body">
                                <h2 class="card-title font-editorial">
                                    Artículo Destacado
                                </h2>
                                <p>
                                    Investigación sobre la corrupción en el
                                    Caribe.
                                </p>
                                <div class="card-actions justify-end">
                                    <button
                                        class="btn btn-sm btn-primary rounded-full"
                                        >Leer Más</button
                                    >
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Glass Effect -->
                <div
                    class="glass-panel p-12 rounded-2xl relative overflow-hidden text-center"
                >
                    <div
                        class="absolute inset-0 -z-10 bg-linear-to-br from-primary/20 via-transparent to-accent/20"
                    >
                    </div>
                    <h2 class="text-4xl font-editorial font-black mb-4">
                        Efecto Cristal
                    </h2>
                    <p class="mb-6 font-medium">
                        Utilizado para paneles flotantes y navegación.
                    </p>
                    <button class="btn-hero-primary">Acción Principal</button>
                </div>
            </section>
        </div>
    </div>
</Layout>
