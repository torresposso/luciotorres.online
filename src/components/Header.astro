---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header
    class="sticky top-0 z-50 w-full bg-base-100/90 backdrop-blur-md border-b border-base-300"
>
    <!-- Main Navbar -->
    <div class="navbar max-w-screen-2xl mx-auto px-6 md:px-12 py-4">
        <div class="navbar-start">
            <div class="dropdown">
                <label
                    tabindex="0"
                    class="btn btn-ghost lg:hidden"
                    aria-label="Menu"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-6 w-6"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M4 6h16M4 12h16m-16 6h16"></path>
                    </svg>
                </label>
                <ul
                    tabindex="0"
                    class="menu menu-sm dropdown-content mt-3 z-1 p-4 shadow-2xl bg-base-100 rounded-box border border-base-300 w-64 font-black uppercase tracking-widest text-base-content"
                >
                    <li><HeaderLink href="/">INICIO</HeaderLink></li>
                    <li>
                        <HeaderLink href="/articulos">ARTÍCULOS</HeaderLink>
                    </li>
                    <li>
                        <HeaderLink href="/gran-colombia"
                            >GRAN COLOMBIA</HeaderLink
                        >
                    </li>
                    <li>
                        <HeaderLink href="/poder-del-ser"
                            >PODER DEL SER</HeaderLink
                        >
                    </li>
                    <li><HeaderLink href="/about">SOBRE MÍ</HeaderLink></li>
                </ul>
            </div>
            <a
                href="/"
                class="text-3xl md:text-4xl font-editorial font-black tracking-tighter text-neutral hover:text-secondary transition-colors leading-none"
            >
                LUCIO<span class="text-primary">.</span>
            </a>
        </div>

        <div class="navbar-center hidden lg:flex">
            <ul
                class="menu menu-horizontal px-1 font-black uppercase tracking-wide text-xs gap-8 text-base-content"
            >
                <li>
                    <HeaderLink href="/" class="nav-link">INICIO</HeaderLink>
                </li>
                <li>
                    <HeaderLink href="/articulos" class="nav-link"
                        >ARTÍCULOS</HeaderLink
                    >
                </li>
                <li>
                    <HeaderLink href="/gran-colombia" class="nav-link"
                        >GRAN COLOMBIA</HeaderLink
                    >
                </li>
                <li>
                    <HeaderLink href="/poder-del-ser" class="nav-link"
                        >PODER DEL SER</HeaderLink
                    >
                </li>
                <li>
                    <HeaderLink href="/about" class="nav-link"
                        >SOBRE MÍ</HeaderLink
                    >
                </li>
            </ul>
        </div>

        <div class="navbar-end">
            <a
                href="/gran-colombia"
                class="btn btn-sm btn-primary text-secondary border-none rounded-lg px-6 font-black tracking-widest text-xs hover:brightness-90 hover:shadow-primary/50 transition-all"
            >
                UNIRSE
            </a>
        </div>
    </div>
</header>

<style>
    @reference "../styles/global.css";
    .nav-link {
        @apply p-0 border-b-2 border-transparent hover:bg-transparent hover:border-primary transition-all;
    }
</style>
